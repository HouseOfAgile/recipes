###> houseofagile/hoa-companion ###
TAG=0.1.0

APP_NAME=%generate(name)%prod
APP_MAIN_DOMAIN=`prod.%generate(name)%-hoa-companion.flensburger.houseofagile.com`
APP_WEB_SERVER_PORT=33080
APP_INNET_SERVER_PORT=33081

COMPOSE_PROJECT_NAME=%generate(name)%_prod

# Symfony Environment Variables
APP_ENV=prod
APP_SECRET=ChangeMe

# Database Configuration (PostgreSQL for frankenphp stack)
POSTGRES_HOST=database
POSTGRES_USER=app
POSTGRES_PASSWORD=!ChangeMe!
POSTGRES_DB=app_prod
POSTGRES_VERSION=16
DATABASE_URL=postgresql://app:!ChangeMe!@database:5432/app_prod?serverVersion=16

# Redis Configuration
REDIS_URL=redis://redis:6379

# Mailer Configuration
MAILER_DSN=null://null

# Messenger Configuration
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# CORS Configuration
CORS_ALLOW_ORIGIN='^https?://(prod\\.%generate(name)%-hoa-companion\\.flensburger\\.houseofagile\\.com)(:[0-9]+)?$'

# Sentry Configuration
SENTRY_DSN=
